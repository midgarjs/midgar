{
  "name": "@midgar/midgar",
  "version": "1.0.0-alpha.3.2",
  "description": "MVCS node js framework",
  "main": "./src/index.js",
  "scripts": {
    "build-docs": "jsdoc -c ./jsdoc.js ./README.md -t ./node_modules/ink-docstrap/template ./README.md -r ./src/",
    "test": "mocha --require esm tests/*.js --exit",
    "coverage": "nyc -i esm --reporter=lcov --reporter=text-summary npm run test",
    "eslint:ci": "eslint -f json -o reports/.eslint-report.json src/ || exit 0",
    "test:ci": "mocha --require esm tests/*.js --reporter mocha-sonarqube-reporter --reporter-options output=reports/xunit.xml --exit",
    "coverage:ci": "nyc -i esm --reporter=lcov npm run test:ci"
  },
  "module": "true",
  "bin": {
    "midgar": "./src/bin/midgar.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/midgarjs/midgar.git"
  },
  "esm": {
    "cjs": true,
    "sourceMap": true
  },
  "dependencies": {
    "@midgar/utils": "^1.0.0-alpha.1.5",
    "colors": "^1.4.0",
    "commander": "^4.1.0",
    "emittery": "^0.5.1",
    "esm": "^3.2.25",
    "figlet": "^1.2.4",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.1"
  },
  "devDependencies": {
    "uid-safe": "^2.1.5",
    "rimraf": "^3.0.0",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "chai-arrays": "^2.0.0",
    "chai-as-promised": "^7.1.1",
    "chai-fs": "^2.0.0",
    "dirty-chai": "^2.0.1",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-standard": "^4.0.1",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "3.6.3",
    "mocha": "^7.0.0",
    "mocha-junit-reporter": "^1.23.1",
    "mocha-sonarqube-reporter": "^1.0.1",
    "nyc": "^15.0.0",
    "sinon": "^8.0.4"
  },
  "keywords": ["mvc", "mvcs", "node", "plugin", "framework"],
  "author": "Metais Fabien",
  "license": "MIT"
}
