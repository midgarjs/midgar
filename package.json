{
  "name": "@midgar/midgar",
  "version": "1.0.0-alpa.2.0",
  "description": "MVCS node js framework",
  "main": "./src/index.js",
  "scripts": {
    "init": "midgar init ./test/test",
    "build-docs": "jsdoc -c ./jsdoc.js -t ./node_modules/ink-docstrap/template ./README.md -r ./src/",
    "test": "mocha --require esm test/*.js --exit",
    "drone": "drone exec --secret-file=.drone-secret",
    "coverage": "nyc -i esm --reporter=lcov --reporter=text-summary npm run test",
    "eslint:ci": "eslint -f json -o reports/.eslint-report.json src/ || exit 0",
    "test:ci": "mocha --require esm test/*.js --reporter mocha-sonarqube-reporter --reporter-options output=reports/xunit.xml --exit",
    "coverage:ci": "nyc -i esm --reporter=lcov npm run test:ci"
  },
  "module": "true",
  "bin": {
    "midgar": "./src/bin/midgar.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/midgarjs/midgar.git"
  },
  "esm": {
    "cjs": true,
    "sourceMap": true
  },
  "dependencies": {
    "@midgar/utils": "^1.0.0",
    "camelcase": "^6.0.0",
    "colors": "^1.4.0",
    "commander": "^6.0.0",
    "cosmiconfig": "^7.0.0",
    "dotenv": "^8.2.0",
    "emittery": "^0.7.1",
    "esm": "^3.2.25",
    "figlet": "^1.5.0",
    "glob": "^7.1.6",
    "inquirer": "^7.3.3",
    "lodash.template": "^4.5.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chai-arrays": "^2.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-fs": "^2.0.0",
    "deep-equal-in-any-order": "^1.0.28",
    "dirty-chai": "^2.0.1",
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-standard": "^4.0.1",
    "ink-docstrap": "^1.3.2",
    "jsdoc": "3.6.5",
    "mocha": "^8.1.1",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-sonarqube-reporter": "^1.0.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.3",
    "uid-safe": "^2.1.5"
  },
  "keywords": [
    "mvc",
    "mvcs",
    "node",
    "plugin",
    "framework"
  ],
  "author": "Metais Fabien",
  "license": "MIT"
}
